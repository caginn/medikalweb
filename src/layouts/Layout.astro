---
import LanguageSwitcher from '../components/LanguageSwitcher.astro';
import { getRelativeLocaleUrl } from 'astro:i18n';

export interface Props {
  title: string;
  description?: string;
}

const { title, description = "SY Sağlık Ürünleri - Tek kullanımlık medikal ürünlerde güvenilir çözüm ortağınız" } = Astro.props;

// Get current locale from URL
const pathname = Astro.url.pathname;
const locales = ['tr', 'en'];
const pathParts = pathname.split('/').filter(Boolean);
const currentLocale = locales.includes(pathParts[0]) ? pathParts[0] : 'tr';

// Translations
const t = {
  tr: {
    home: 'Ana Sayfa',
    about: 'Hakkımızda',
    products: 'Ürünlerimiz',
    contact: 'İletişim',
    quickLinks: 'Hızlı Bağlantılar',
    companyDesc: 'Tek kullanımlık medikal ürünlerde güvenilir çözüm ortağınız. Kalite ve hijyen standartlarında taviz vermeden hizmet veriyoruz.',
    copyright: '© 2024 SY Sağlık Ürünleri. Tüm hakları saklıdır.'
  },
  en: {
    home: 'Home',
    about: 'About Us',
    products: 'Products',
    contact: 'Contact',
    quickLinks: 'Quick Links',
    companyDesc: 'Your reliable partner in disposable medical products. We provide service without compromising on quality and hygiene standards.',
    copyright: '© 2024 SY Sağlık Ürünleri. All rights reserved.'
  }
};

const texts = t[currentLocale] || t.tr;

// Generate locale-aware URLs
const homeUrl = getRelativeLocaleUrl(currentLocale, '/');
const aboutUrl = getRelativeLocaleUrl(currentLocale, '/about');
const productsUrl = getRelativeLocaleUrl(currentLocale, '/products');
const contactUrl = getRelativeLocaleUrl(currentLocale, '/contact');
---

<!DOCTYPE html>
<html lang={currentLocale}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | SY Sağlık Ürünleri</title>
  </head>
  <body class="min-h-screen flex flex-col">
    <!-- Navigation -->
    <header class="bg-white shadow-sm sticky top-0 z-50">
      <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-20">
          <!-- Logo -->
          <a href={homeUrl} class="flex items-center">
            <img src="/logo.png" alt="SY Sağlık Ürünleri" class="h-16 w-auto" />
          </a>

          <!-- Desktop Navigation -->
          <div class="hidden md:flex items-center space-x-6">
            <a href={homeUrl} class="text-gray-700 hover:text-accent transition-colors font-medium">{texts.home}</a>
            <a href={aboutUrl} class="text-gray-700 hover:text-accent transition-colors font-medium">{texts.about}</a>
            <a href={productsUrl} class="text-gray-700 hover:text-accent transition-colors font-medium">{texts.products}</a>
            <a href={contactUrl} class="btn-primary">{texts.contact}</a>
            <LanguageSwitcher />
          </div>

          <!-- Mobile Menu Button -->
          <button id="mobile-menu-btn" class="md:hidden p-2 rounded-md text-gray-700 hover:bg-gray-100">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>

        <!-- Mobile Navigation -->
        <div id="mobile-menu" class="hidden md:hidden pb-4">
          <div class="flex flex-col space-y-3">
            <a href={homeUrl} class="text-gray-700 hover:text-accent transition-colors font-medium py-2">{texts.home}</a>
            <a href={aboutUrl} class="text-gray-700 hover:text-accent transition-colors font-medium py-2">{texts.about}</a>
            <a href={productsUrl} class="text-gray-700 hover:text-accent transition-colors font-medium py-2">{texts.products}</a>
            <a href={contactUrl} class="btn-primary text-center">{texts.contact}</a>
            <div class="pt-2">
              <LanguageSwitcher />
            </div>
          </div>
        </div>
      </nav>
    </header>

    <!-- Main Content -->
    <main class="flex-grow">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-gray-900 text-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
          <!-- Company Info -->
          <div class="md:col-span-2">
            <div class="mb-6">
              <div class="bg-white rounded-lg p-2 inline-block">
                <img src="/logo.png" alt="SY Sağlık Ürünleri" class="h-12 w-auto" />
              </div>
            </div>
            <p class="text-gray-400 mb-4 max-w-md">
              {texts.companyDesc}
            </p>
          </div>

          <!-- Quick Links -->
          <div>
            <h4 class="text-lg font-semibold mb-4">{texts.quickLinks}</h4>
            <ul class="space-y-2">
              <li><a href={homeUrl} class="text-gray-400 hover:text-accent transition-colors">{texts.home}</a></li>
              <li><a href={aboutUrl} class="text-gray-400 hover:text-accent transition-colors">{texts.about}</a></li>
              <li><a href={productsUrl} class="text-gray-400 hover:text-accent transition-colors">{texts.products}</a></li>
              <li><a href={contactUrl} class="text-gray-400 hover:text-accent transition-colors">{texts.contact}</a></li>
            </ul>
          </div>

          <!-- Contact Info -->
          <div>
            <h4 class="text-lg font-semibold mb-4">{texts.contact}</h4>
            <ul class="space-y-2 text-gray-400">
              <li class="flex items-start space-x-2">
                <svg class="w-5 h-5 mt-0.5 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                <span>Çankaya Mah. Farabi Sokak No:24/14, 06690 Çankaya Ankara</span>
              </li>
              <li class="flex items-center space-x-2">
                <svg class="w-5 h-5 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
                <span>info@sysaglik.com</span>
              </li>
              <li class="flex items-center space-x-2">
                <svg class="w-5 h-5 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
                <span>0 (312) 219 82 40</span>
              </li>
            </ul>
          </div>
        </div>

        <!-- Copyright -->
        <div class="border-t border-gray-800 mt-8 pt-8 text-center text-gray-500">
          <p>{texts.copyright}</p>
        </div>
      </div>
    </footer>
    
    <!-- Mobile Menu Script -->
    <script is:inline>
      document.getElementById('mobile-menu-btn').addEventListener('click', function() {
        document.getElementById('mobile-menu').classList.toggle('hidden');
      });
    </script>
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>
